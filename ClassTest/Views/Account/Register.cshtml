@model ClassTest.Models.Student
@{
    ViewData["Title"] = "Register";
} 
    <h2>Student Data</h2>
    <form method="post" asp-controller="account" asp-action="Register">

        <div class="form-group">
            <label for="FirstName">FirstName</label>
            <input type="text" asp-for="FirstName" name="FirstName" class="form-control col-md-3" />
        </div>

        <div class="form-group">
            <label for="LastName">LastName</label>
            <input type="text" asp-for="LastName" name="LastName" class="form-control col-md-3" />
        </div>


        <div class="form-group">
            <label for="Gender">Gender</label>
            <input type="radio" name="gender" id="male">
            <label for="m">Male</label>

            <input type="radio" name="gender" id="female">
            <label for="f">Female</label>
        </div>

        <div class="form-group">
            <label for="DOB">DOB</label>
            <input type="date" asp-for="DOB" name="DOB" class="form-control col-md-3" />
        </div>

        <div class="form-group">
            <label for="Address">Address</label><br /><br />
            <textarea rows="4" asp-for="Address" cols="40"></textarea>
            @* <input type="text" formControlName="Address" class="form-control" />*@
        </div>

        <div class="form-group">
            <label for="Highest_Qualification">Highest_Qualification</label>

            <select id="Highest_Qualification" name="Highest_Qualification">
                <option disabled selected>--Qualification--</option>
                <optgroup label="Metros">
                    <option>BE</option>
                    <option>MCA</option>
                    <option>MBM</option>
                    <option>MBA</option>
                </optgroup>

            </select>

        </div>

        <div class="form-group">
            <label for="Email">Email</label>
            <input type="text" asp-for="Email" name="Email" class="form-control col-md-3" />
        </div>

        <div class="form-group">
            <label for="PhoneNo">PhoneNo</label>
            <input type="text" asp-for="PhoneNo" name="PhoneNo" class="form-control col-md-3" />
        </div>

        <div class="form-group">
            <label for="Hobbies">Hobbies</label>
            <input type="checkbox" name="Hobbies" value="Cricket" class="" /> Cricket
            <input type="checkbox" name="Hobbies" value="Cricket" class="" /> Singing
            <input type="checkbox" name="Hobbies" value="Cricket" class="" /> Surfing
            <input type="checkbox" name="Hobbies" value="Cricket" class="" /> Trecking 
        </div>


        <div class="form-group">
            <button class="btn btn-primary">Register</button>
            <a routerLink="login" class="btn btn-link">Cancel</a>
        </div>

        @Html.ActionLink("Back to List", "Index")

    </form>
 

